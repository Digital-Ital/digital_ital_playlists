<div class="min-h-screen">
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-yellow-400 via-red-500 to-green-500 animate-pulse"></div>
      <div class="absolute top-10 left-10 w-32 h-32 bg-yellow-400 rounded-full blur-3xl animate-bounce"></div>
      <div class="absolute top-40 right-20 w-24 h-24 bg-red-500 rounded-full blur-2xl animate-pulse delay-1000"></div>
      <div class="absolute bottom-20 left-1/3 w-28 h-28 bg-green-500 rounded-full blur-3xl animate-bounce delay-500"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-6 py-20">
      <!-- Header -->
      <div class="text-center mb-16">
        <%= link_to root_path, class: "inline-block" do %>
          <h1 class="text-6xl md:text-8xl font-bold mb-6">
            <span class="bg-gradient-to-r from-yellow-400 via-red-500 to-green-500 bg-clip-text text-transparent">
              Digital Ital Spotify Crates
            </span>
          </h1>
        <% end %>
        
        <h2 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="bg-gradient-to-r from-orange-400 to-red-500 bg-clip-text text-transparent">
            ðŸŽµ What's New ðŸŽµ
          </span>
        </h2>
        <p class="text-gray-300 text-lg">
          Latest tracks added across all playlists
        </p>
      </div>
    </div>
  </section>

  <!-- Category Filters -->
  <section class="py-4">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="flex flex-wrap justify-center gap-3 mb-8">
        <%= link_to 'All Categories', whats_new_path, 
                    class: "px-4 py-2 rounded-lg font-semibold transition-all #{params[:category_id].nil? ? 'bg-yellow-500 text-black' : 'bg-gray-700 text-white hover:bg-gray-600'}" %>
        <% Category.main_families.each do |category| %>
          <%= link_to whats_new_path(category_id: category.id), 
                      class: "px-4 py-2 rounded-lg font-semibold transition-all #{params[:category_id] == category.id.to_s ? 'bg-gradient-to-r text-white' : 'bg-gray-700 text-white hover:bg-gray-600'}",
                      style: params[:category_id] == category.id.to_s ? "background: #{category.family_color}" : "" do %>
            <%= category.family_emoji %> <%= category.name %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Tracks List -->
  <section class="py-4">
    <div class="container mx-auto px-6 max-w-6xl">
      <% if @playlist_tracks.any? %>
        <div class="space-y-4 mb-8">
          <% @playlist_tracks.each do |playlist_track| %>
            <div class="bg-gray-900/80 rounded-xl p-6 border border-gray-700 hover:border-yellow-500 transition-all duration-300 transform hover:scale-[1.01]">
              <div class="flex items-start gap-4">
                <!-- Track Cover -->
                <% if playlist_track.track.image_url.present? %>
                  <a href="<%= playlist_track.track.external_url %>" target="_blank" class="flex-shrink-0">
                    <img src="<%= playlist_track.track.image_url %>" 
                         alt="<%= playlist_track.track.name %>" 
                         class="w-24 h-24 md:w-32 md:h-32 rounded-lg shadow-lg hover:shadow-yellow-500/25 transition-shadow duration-300">
                  </a>
                <% end %>
                
                <!-- Track Info -->
                <div class="flex-1 min-w-0">
                  <!-- Track Name & Artist -->
                  <div class="mb-3">
                    <a href="<%= playlist_track.track.external_url %>" target="_blank" class="group">
                      <h3 class="text-xl md:text-2xl font-bold text-white group-hover:text-yellow-400 transition-colors">
                        <%= playlist_track.track.name %>
                      </h3>
                    </a>
                    <p class="text-gray-300 text-lg font-medium"><%= playlist_track.track.artist %></p>
                    <% if playlist_track.track.album.present? %>
                      <p class="text-gray-400 text-base"><%= playlist_track.track.album %></p>
                    <% end %>
                  </div>
                  
                  <!-- Playlist Badge & Categories -->
                  <div class="flex flex-wrap items-center gap-3 mb-3">
                    <span class="text-gray-300 text-sm font-semibold">Added to:</span>
                    <a href="<%= playlist_track.playlist.spotify_url %>" target="_blank" 
                       class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-green-500 to-green-600 rounded-lg hover:from-green-400 hover:to-green-500 transition-all duration-300 transform hover:scale-105">
                      <span class="text-white font-semibold"><%= playlist_track.playlist.title %></span>
                      <span class="text-white">ðŸŽµ</span>
                    </a>
                  </div>
                  
                  <!-- Category Tags -->
                  <% if playlist_track.playlist.categories.any? %>
                    <div class="flex flex-wrap items-center gap-2 mb-3">
                      <span class="text-gray-300 text-sm">Categories:</span>
                      <% playlist_track.playlist.categories.each do |category| %>
                        <%= link_to whats_new_path(category_id: category.id), 
                                    class: "px-3 py-1 rounded-lg text-sm font-semibold text-white hover:scale-105 transition-transform",
                                    style: "background-color: #{category.color || '#FDE68A'};" do %>
                          <%= category.emoji %> <%= category.name %>
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>
                  
                  <!-- Added Date -->
                  <div class="mt-2 text-yellow-400 text-sm font-semibold">
                    Added <%= time_ago_in_words(playlist_track.added_at) %> ago 
                    <span class="text-gray-300">(<%= playlist_track.added_at.strftime("%b %d, %Y") %>)</span>
                  </div>
                </div>
                
                <!-- Spotify Link -->
                <div class="flex-shrink-0">
                  <a href="<%= playlist_track.track.external_url %>" target="_blank" 
                     class="flex items-center justify-center w-12 h-12 bg-green-500 rounded-full hover:bg-green-400 transition-colors shadow-lg hover:shadow-green-500/25"
                     title="Open in Spotify">
                    <span class="text-2xl">ðŸŽµ</span>
                  </a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Pagination -->
        <div class="flex justify-center">
          <%= paginate @playlist_tracks %>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-20">
          <div class="text-6xl mb-4">ðŸŽµ</div>
          <h3 class="text-2xl font-bold text-white mb-4">No Tracks Yet</h3>
          <p class="text-gray-400 mb-6">
            Tracks will appear here as playlists are updated from Spotify.
          </p>
          <%= link_to 'Browse All Playlists', root_path, 
                      class: 'px-6 py-3 bg-yellow-500 text-black rounded-lg hover:bg-yellow-400 transition-colors font-semibold' %>
        </div>
      <% end %>
    </div>
  </section>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
  
  body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #2a2a2a 100%);
    min-height: 100vh;
  }
  
  .vinyl-texture {
    background-image: 
      radial-gradient(circle at 20% 20%, rgba(255,255,255,0.1) 1px, transparent 1px),
      radial-gradient(circle at 80% 80%, rgba(255,255,255,0.05) 1px, transparent 1px);
    background-size: 50px 50px;
  }
</style>

