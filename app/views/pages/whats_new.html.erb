<div class="min-h-screen">
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 opacity-15">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-yellow-900 via-red-900 to-green-900 animate-pulse"></div>
      <div class="absolute top-10 left-10 w-32 h-32 bg-yellow-800 rounded-full blur-3xl animate-bounce"></div>
      <div class="absolute top-40 right-20 w-24 h-24 bg-red-900 rounded-full blur-2xl animate-pulse delay-1000"></div>
      <div class="absolute bottom-20 left-1/3 w-28 h-28 bg-green-900 rounded-full blur-3xl animate-bounce delay-500"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-6 py-12">
      <!-- Header -->
      <div class="text-center mb-8">
        <%= link_to root_path, class: "inline-block", data: { turbo: false } do %>
          <h1 class="text-5xl md:text-7xl font-bold mb-4">
            <span class="bg-gradient-to-r from-yellow-600 via-red-900 to-green-700 bg-clip-text text-transparent drop-shadow-lg">
              Digital Ital Crates
            </span>
          </h1>
        <% end %>
        
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          <span class="bg-gradient-to-r from-orange-700 to-red-900 bg-clip-text text-transparent drop-shadow-lg">
            üéµ What's New üéµ
          </span>
        </h2>
        
        <!-- Back Button -->
        <div class="mb-6">
          <%= link_to root_path, class: "inline-block px-6 py-3 bg-yellow-700 text-white rounded-lg hover:bg-yellow-600 transition-colors font-semibold shadow-lg", data: { turbo: false } do %>
            ‚Üê Back to All Playlists
          <% end %>
        </div>
        
        <!-- Filter Section Label -->
        <div class="mb-4">
          <div class="inline-block bg-black/70 px-6 py-2 rounded-lg">
            <p class="text-yellow-400 text-lg font-bold">
              Latest Tracks - Filterable by Category:
            </p>
          </div>
        </div>
        
        <!-- Category Filter Buttons -->
        <div class="flex flex-wrap justify-center gap-3 mb-4">
        <%= link_to 'All Categories', whats_new_path, 
                    class: "px-4 py-2 rounded-lg font-semibold transition-all #{params[:category_id].nil? ? 'bg-yellow-700 text-white' : 'bg-gray-800 text-white hover:bg-gray-700'}" %>
        <% Category.main_families.each do |category| %>
          <% if params[:category_id] == category.id.to_s %>
            <%= link_to whats_new_path(category_id: category.id), 
                        class: "px-4 py-2 rounded-lg font-bold transition-all text-black border-2 border-yellow-400 shadow-lg",
                        style: "background: #{category.family_color};" do %>
              <%= category.family_emoji %> <%= category.name %>
            <% end %>
          <% else %>
            <%= link_to whats_new_path(category_id: category.id), 
                        class: "px-4 py-2 rounded-lg font-semibold transition-all bg-gray-800 text-white hover:bg-gray-700" do %>
              <%= category.family_emoji %> <%= category.name %>
            <% end %>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- Tracks List -->
  <section class="py-4">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <% if @grouped_tracks.any? %>
        <!-- Statistics Header -->
        <div class="bg-gradient-to-r from-gray-900/80 to-gray-800/80 rounded-xl p-4 sm:p-6 mb-6 sm:mb-8 border border-gray-600/50 backdrop-blur-sm">
          <div class="text-center">
            <h3 class="text-lg sm:text-xl font-bold text-white mb-3">üìà Recent Activity</h3>
            <div class="flex flex-col sm:flex-row flex-wrap justify-center gap-3 sm:gap-6 text-xs sm:text-sm">
              <div class="flex items-center justify-center gap-2">
                <span class="text-yellow-400 font-semibold"><%= @grouped_tracks.total_count %></span>
                <span class="text-gray-300">unique songs</span>
              </div>
              <div class="flex items-center justify-center gap-2">
                <span class="text-green-400 font-semibold">Page <%= @grouped_tracks.current_page %></span>
                <span class="text-gray-400">of <%= @grouped_tracks.total_pages %></span>
              </div>
              <div class="flex items-center justify-center gap-2">
                <span class="text-blue-400 font-semibold">50</span>
                <span class="text-gray-300">songs per page</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="space-y-6 mb-8">
          <% @grouped_tracks.each do |group| %>
            <% 
              # Calculate recency for color coding
              hours_ago = (Time.current - group[:main_playlist_track].added_at) / 1.hour
              recency_color = case
                when hours_ago < 1 then 'border-green-500/50 bg-green-900/10'
                when hours_ago < 24 then 'border-yellow-500/50 bg-yellow-900/10' 
                when hours_ago < 72 then 'border-orange-500/50 bg-orange-900/10'
                else 'border-gray-600/50 bg-gray-900/10'
              end
              
              # Hot badge for songs in multiple playlists
              is_hot = group[:total_playlists] >= 3
            %>
            
            <div class="bg-gray-900/90 rounded-xl p-5 border-2 <%= recency_color %> hover:border-yellow-400/70 hover:bg-gray-800/90 transition-all duration-300 hover:scale-[1.02] hover:shadow-lg hover:shadow-yellow-500/10">
              <!-- Hot Badge -->
              <% if is_hot %>
                <div class="flex justify-end mb-3">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-red-500 to-pink-500 text-white shadow-lg">
                    üî• HOT
                  </span>
                </div>
              <% end %>
              
              <div class="flex items-start gap-5">
                <!-- Track Cover -->
                <% if group[:track].image_url.present? %>
                  <a href="<%= group[:track].external_url %>" target="_blank" class="flex-shrink-0 group">
                    <img src="<%= group[:track].image_url %>" 
                         alt="<%= group[:track].name %>" 
                         class="w-32 h-32 md:w-28 md:h-28 rounded-xl shadow-xl hover:shadow-yellow-500/30 transition-all duration-300 group-hover:scale-105">
                  </a>
                <% end %>
                
                <!-- Track Info -->
                <div class="flex-1 min-w-0">
                  <!-- Song Title & Artist -->
                  <a href="<%= group[:track].external_url %>" target="_blank" class="group">
                    <h3 class="text-xl md:text-lg font-bold text-white group-hover:text-yellow-400 transition-colors line-clamp-1 mb-1">
                      <%= group[:track].name %>
                    </h3>
                  </a>
                  <p class="text-gray-300 text-base md:text-sm mb-4 line-clamp-1 font-medium"><%= group[:track].artist %></p>
                  
                  <!-- Main Playlist (most recent addition) -->
                  <div class="mb-4">
                    <div class="flex flex-wrap items-center gap-2 mb-2">
                      <span class="text-green-400 text-sm font-semibold flex items-center gap-1">
                        <span class="w-2 h-2 bg-green-400 rounded-full"></span>
                        Added to:
                      </span>
                    </div>
                    <div class="flex flex-wrap items-center gap-2">
                      <a href="<%= group[:main_playlist_track].playlist.spotify_url %>" target="_blank" 
                         class="inline-block px-4 py-2 bg-gradient-to-r from-green-500 to-green-600 rounded-lg hover:from-green-400 hover:to-green-500 transition-all shadow-md hover:shadow-lg">
                        <span class="text-white font-semibold text-sm"><%= group[:main_playlist_track].playlist.title %></span>
                      </a>
                      <span class="text-yellow-400 text-sm font-medium bg-yellow-900/30 px-2 py-1 rounded-md">
                        <%= time_ago_in_words(group[:main_playlist_track].added_at) %> ago
                      </span>
                    </div>
                  </div>
                  
                  <!-- Other Playlists (if any) -->
                  <% if group[:other_playlist_tracks].any? %>
                    <div class="mb-4">
                      <div class="flex flex-wrap items-center gap-2 mb-2">
                        <span class="text-blue-400 text-sm font-semibold flex items-center gap-1">
                          <span class="w-2 h-2 bg-blue-400 rounded-full"></span>
                          Also added to:
                        </span>
                      </div>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                        <% group[:other_playlist_tracks].each do |other_track| %>
                          <div class="flex items-center gap-2 bg-gray-800/50 rounded-lg p-2">
                            <a href="<%= other_track.playlist.spotify_url %>" target="_blank" 
                               class="flex-1 inline-block px-3 py-1 bg-gradient-to-r from-blue-500 to-blue-600 rounded-md hover:from-blue-400 hover:to-blue-500 transition-all">
                              <span class="text-white font-semibold text-xs"><%= other_track.playlist.title %></span>
                            </a>
                            <span class="text-gray-400 text-xs bg-gray-700/50 px-2 py-1 rounded-md">
                              <%= time_ago_in_words(other_track.added_at) %> ago
                            </span>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                  
                  <!-- Categories + Playlist Count -->
                  <div class="flex flex-wrap items-center gap-2 mt-4 pt-3 border-t border-gray-700/50">
                    <!-- Categories -->
                    <% if group[:main_playlist_track].playlist.categories.any? %>
                      <div class="flex flex-wrap items-center gap-2">
                        <% group[:main_playlist_track].playlist.categories.first(3).each do |category| %>
                          <%= link_to whats_new_path(category_id: category.id), 
                                      class: "inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-semibold text-white hover:scale-105 transition-all duration-200 shadow-md",
                                      style: "background-color: #{category.color || '#FDE68A'};" do %>
                            <span><%= category.emoji %></span>
                            <span><%= category.name %></span>
                          <% end %>
                        <% end %>
                      </div>
                    <% end %>
                    
                    <!-- Playlist Count Badge -->
                    <% if group[:total_playlists] > 1 %>
                      <div class="flex items-center gap-1">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-purple-500 to-indigo-500 text-white shadow-md">
                          <span class="w-2 h-2 bg-white rounded-full mr-1"></span>
                          <%= group[:total_playlists] %> playlists
                        </span>
                      </div>
                    <% end %>
                    
                    <!-- Recency Indicator -->
                    <div class="flex items-center gap-1">
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                        <%= case
                            when hours_ago < 1 then 'bg-green-500/20 text-green-400'
                            when hours_ago < 24 then 'bg-yellow-500/20 text-yellow-400'
                            when hours_ago < 72 then 'bg-orange-500/20 text-orange-400'
                            else 'bg-gray-500/20 text-gray-400'
                          end %>">
                        <span class="w-1.5 h-1.5 rounded-full mr-1
                          <%= case
                              when hours_ago < 1 then 'bg-green-400'
                              when hours_ago < 24 then 'bg-yellow-400'
                              when hours_ago < 72 then 'bg-orange-400'
                              else 'bg-gray-400'
                            end %>"></span>
                        <%= case
                            when hours_ago < 1 then 'Just added'
                            when hours_ago < 24 then 'Today'
                            when hours_ago < 72 then 'Recent'
                            else 'Older'
                          end %>
                      </span>
                    </div>
                  </div>
                </div>
                
                <!-- Spotify Link Button -->
                <div class="flex-shrink-0">
                  <a href="<%= group[:track].external_url %>" target="_blank" 
                     class="flex flex-col items-center justify-center px-4 py-3 bg-gradient-to-br from-green-500 to-green-600 rounded-xl hover:from-green-400 hover:to-green-500 transition-all duration-200 shadow-lg hover:shadow-green-500/30 hover:scale-105"
                     title="Play on Spotify">
                    <span class="text-2xl mb-1">‚ñ∂Ô∏è</span>
                    <span class="text-white text-xs font-bold">Spotify</span>
                  </a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Pagination -->
        <div class="flex flex-col items-center gap-4">
          <!-- Page Info -->
          <div class="text-center">
            <p class="text-gray-300 text-sm">
              Page <%= @grouped_tracks.current_page %> of <%= @grouped_tracks.total_pages %> 
              ‚Ä¢ <%= @grouped_tracks.total_count %> songs total
            </p>
          </div>
          
          <!-- Pagination Controls -->
          <div class="flex justify-center">
            <%= paginate @grouped_tracks %>
          </div>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-20">
          <div class="text-6xl mb-4">üéµ</div>
          <h3 class="text-2xl font-bold text-white mb-4">No Tracks Yet</h3>
          <p class="text-gray-400 mb-6">
            Tracks will appear here as playlists are updated from Spotify.
          </p>
          <%= link_to 'Browse All Playlists', root_path, 
                      class: 'px-6 py-3 bg-yellow-500 text-black rounded-lg hover:bg-yellow-400 transition-colors font-semibold' %>
        </div>
      <% end %>
    </div>
  </section>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
  
  body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #2a2a2a 100%);
    min-height: 100vh;
  }
  
  .vinyl-texture {
    background-image: 
      radial-gradient(circle at 20% 20%, rgba(255,255,255,0.1) 1px, transparent 1px),
      radial-gradient(circle at 80% 80%, rgba(255,255,255,0.05) 1px, transparent 1px);
    background-size: 50px 50px;
  }
</style>


