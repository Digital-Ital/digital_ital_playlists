                  data-category-id="<%= @categories.find { |c| c.name == 'Hip-Hop' }&.id %>"
                  data-category-color="<%= @categories.find { |c| c.name == 'Hip-Hop' }&.color %>"
                  style="border-color: <%= @categories.find { |c| c.name == 'Hip-Hop' }&.color %>; color: <%= @categories.find { |c| c.name == 'Hip-Hop' }&.color %>"
