                <h5 class="text-lg font-semibold text-gray-400 mb-4">Cannabis Songs</h5>
                <div class="flex flex-wrap justify-center gap-4">
                  <button 
                    class="category-btn parent-category px-6 py-3 rounded-full border-2 text-gray-300 hover:border-yellow-400 hover:text-yellow-400 transition-all duration-300 hover:scale-105 text-lg font-bold"
                    data-category-id="<%= @categories.find { |c| c.name == 'Cannabis Songs' }&.id %>"
                    data-category-color="<%= @categories.find { |c| c.name == 'Cannabis Songs' }&.color %>"
                    style="border-color: <%= @categories.find { |c| c.name == 'Cannabis Songs' }&.color %>; color: <%= @categories.find { |c| c.name == 'Cannabis Songs' }&.color %>"
