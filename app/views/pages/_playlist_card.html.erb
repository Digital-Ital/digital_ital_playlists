<div class="group transform transition-all duration-300 hover:-translate-y-2">
  <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-gray-900 to-gray-800 border-2 border-yellow-500/40 hover:border-yellow-400 transition-all shadow-2xl hover:shadow-yellow-500/40 ring-1 ring-yellow-500/20">
    <!-- Shine effect -->
    <div class="absolute inset-0 bg-gradient-to-br from-yellow-500/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    
    <!-- Cover Image -->
    <div class="relative aspect-square overflow-hidden">
      <% if playlist.cover_image_url %>
        <img src="<%= playlist.cover_image_url %>" alt="<%= playlist.title %>" class="w-full h-full object-cover">
      <% else %>
        <div class="w-full h-full bg-gradient-to-br from-gray-800 to-gray-900 flex items-center justify-center">
          <div class="text-6xl">üéµ</div>
        </div>
      <% end %>
      <!-- Featured badge -->
      <div class="absolute bottom-3 right-3 bg-yellow-400/60 backdrop-blur-sm text-black px-2 py-1 rounded-full text-xs font-bold shadow-lg border border-yellow-300/60 ring-1 ring-yellow-300/40">
        ‚≠ê FEATURED
      </div>
    </div>
    
    <!-- Playlist Info -->
    <div class="p-4">
      <h4 class="text-lg font-bold text-white mb-2 line-clamp-2 group-hover:text-yellow-400 transition-colors">
        <%= playlist.title %>
      </h4>
      
      <!-- Metadata -->
      <div class="flex flex-wrap items-center gap-2 text-sm text-gray-400 mb-3">
        <span class="px-2 py-1 bg-gray-800/60 rounded-full text-yellow-400 font-semibold">
          üéµ <%= playlist.track_count %> tracks
        </span>
        <% if playlist.duration %>
          <span><%= playlist.duration %></span>
        <% end %>
      </div>
      
      <!-- Latest Tracks Preview -->
      <div class="mb-3 rounded-lg bg-gradient-to-r from-green-900/20 to-green-800/20 border border-green-500/30 p-3">
        <div class="mb-2">
          <p class="text-green-400 text-sm font-semibold mb-1">Latest Tracks</p>
          <div class="text-xs text-gray-400">Recent additions to this playlist</div>
        </div>
        
        <!-- Track List -->
        <div class="space-y-1">
          <% playlist.tracks.order(created_at: :desc).limit(3).each do |track| %>
            <div class="flex items-center gap-1 text-xs text-gray-300 hover:text-white transition-colors">
              <span class="text-green-400 text-xs">‚ñ∂</span>
              <div class="flex-1 min-w-0">
                <div class="truncate font-medium"><%= track.name %></div>
                <div class="truncate text-gray-500 text-xs"><%= track.artist %></div>
              </div>
              <span class="text-gray-600 text-xs whitespace-nowrap ml-1" data-timestamp="<%= track.created_at.to_i %>">
                <span class="relative-time"></span>
              </span>
            </div>
          <% end %>
        </div>
        
        <div class="mt-2 text-center">
          <span class="text-green-400 text-xs">Click "Open on Spotify" to play</span>
        </div>
      </div>
      
      <!-- Spotify Button -->
      <button class="spotify-open-btn w-full px-3 py-2 mb-3 rounded-lg bg-green-600 text-white font-semibold hover:bg-green-500 shadow-md hover:shadow-lg hover:shadow-green-500/30 transition-all duration-200 cursor-pointer relative z-10"
              data-playlist-id="<%= playlist.id %>"
              data-location="featured"
              data-spotify-url="<%= playlist.spotify_url %>"
              style="pointer-events: auto !important; position: relative; z-index: 10;">
        ‚ñ∂Ô∏è Open on Spotify
      </button>
      
      <!-- Social Media Share Buttons -->
      <div class="flex gap-2 mb-3 justify-center">
        <!-- Instagram Share -->
        <button 
          class="flex items-center gap-1 px-2 py-1.5 rounded-lg transition-all duration-200 group hover:scale-105 shadow-md hover:shadow-lg"
          style="background: linear-gradient(45deg, #833AB4 0%, #E1306C 50%, #FD1D1D 100%);"
          onclick="event.stopPropagation(); shareToInstagram('<%= playlist.title.gsub("'", "\\'") %>', '<%= playlist.spotify_url %>')"
          title="Share on Instagram">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </button>
        
        <!-- X (Twitter) Share -->
        <button 
          class="flex items-center gap-1 px-2 py-1.5 rounded-lg bg-black hover:bg-gray-800 transition-all duration-200 group hover:scale-105 shadow-md hover:shadow-lg"
          onclick="event.stopPropagation(); shareToX('<%= playlist.title.gsub("'", "\\'") %>', '<%= playlist.spotify_url %>')"
          title="Share on X (Twitter)">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </button>
        
        <!-- Mixcloud Share -->
        <button 
          class="flex items-center gap-1 px-2 py-1.5 rounded-lg transition-all duration-200 group hover:scale-105 shadow-md hover:shadow-lg"
          style="background: linear-gradient(135deg, #314455 0%, #52AAC6 100%);"
          onclick="event.stopPropagation(); shareToMixcloud('<%= playlist.title.gsub("'", "\\'") %>', '<%= playlist.spotify_url %>')"
          title="Share on Mixcloud">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M2.462 8.596l1.372 6.49h.297l1.368-6.49h1.368l1.368 6.49h.297l1.368-6.49h1.368v7.78h-1.368v-1.297h-.297v1.297H8.388v-1.297h-.297v1.297H6.723v-1.297h-.297v1.297H5.058v-1.297h-.297v1.297H3.393V8.596h1.368zm11.712 0v7.78h-1.368V8.596h1.368zm3.405 0v7.78h-1.368V8.596h1.368zm3.405 0v7.78h-1.368V8.596h1.368zm3.405 0v7.78h-1.368V8.596h1.368zm3.405 0v7.78h-1.368V8.596h1.368z"/>
          </svg>
        </button>
      </div>
      
      <!-- Categories -->
      <% if playlist.categories.any? %>
        <div class="flex flex-wrap gap-1">
          <% playlist.categories.first(2).each do |category| %>
            <span class="featured-category-tag px-2 py-0.5 rounded text-xs font-semibold"
                  data-color="<%= category.color || '#FDE68A' %>">
              <%= category.emoji %> <%= category.name %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
