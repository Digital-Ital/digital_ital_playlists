<script>
  // Track Spotify opens
  document.addEventListener('DOMContentLoaded', function() {
    const spotifyLinks = document.querySelectorAll('a[data-spotify-url]');
    spotifyLinks.forEach(function(link) {
      link.addEventListener('click', function() {
        const playlistId = this.getAttribute('data-playlist-id');
        const location = this.getAttribute('data-location') || 'latest-reggae';
        
        if (playlistId) {
          fetch('/api/playlists/' + playlistId + '/spotify_open', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
            },
            body: JSON.stringify({
              location: location
            })
          }).catch(function(err) {
            console.log('Analytics tracking failed:', err);
          });
        }
      });
    });
  });
  
  // Instagram share functionality
  document.addEventListener('DOMContentLoaded', function() {
    const instagramBtns = document.querySelectorAll('.instagram-share-btn');
    instagramBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        const title = this.getAttribute('data-playlist-title');
        const url = this.getAttribute('data-playlist-url');
        const text = title + ' - ' + url;
        
        if (navigator.clipboard) {
          navigator.clipboard.writeText(text).then(function() {
            alert('Link copied to clipboard! Paste it in your Instagram story or post.');
          }).catch(function(err) {
            console.error('Failed to copy:', err);
            // Fallback: open share dialog
            window.open('https://www.instagram.com/', '_blank');
          });
        } else {
          // Fallback for older browsers
          const textArea = document.createElement('textarea');
          textArea.value = text;
          document.body.appendChild(textArea);
          textArea.select();
          try {
            document.execCommand('copy');
            alert('Link copied to clipboard! Paste it in your Instagram story or post.');
          } catch (err) {
            console.error('Failed to copy:', err);
          }
          document.body.removeChild(textArea);
        }
      });
    });
  });
</script>

