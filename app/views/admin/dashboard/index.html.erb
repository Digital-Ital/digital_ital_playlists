<div class="container mx-auto px-6 py-10 bg-black/50 rounded-xl backdrop-blur-sm">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-white mb-2">Digital Ital's Admin Dashboard</h1>
    <p class="text-gray-300">Manage your playlists and categories</p>
    
    <!-- Automation Status -->
    <div class="mt-4 p-4 bg-gradient-to-r from-green-900/30 to-blue-900/30 rounded-lg border border-green-500/30">
      <div class="flex items-center justify-between mb-3">
        <div>
          <h3 class="text-lg font-bold text-green-400 mb-1">ğŸ¤– Automated Updates</h3>
          <p class="text-gray-300 text-sm">Playlists update automatically every hour</p>
        </div>
        <div class="text-right">
          <p class="text-green-400 text-sm font-semibold">ACTIVE</p>
          <p class="text-gray-400 text-xs">Next run: Every hour at :40</p>
        </div>
      </div>
      
      <!-- Last Run Details -->
      <% if @latest_batch %>
        <div class="border-t border-green-500/20 pt-3">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-300 text-sm font-medium">Last Run</p>
              <p class="text-white text-xs">
                <%= @latest_batch.started_at.strftime("%b %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@latest_batch.started_at) %> ago)</span>
              </p>
            </div>
            <div class="text-right">
              <% if @latest_batch.status == 'completed' %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-900/50 text-green-400 border border-green-500/30">
                  âœ… Completed
                </span>
                <p class="text-green-400 text-xs mt-1">
                  <%= @latest_batch.changes_count %> changes
                </p>
              <% elsif @latest_batch.status == 'running' %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-900/50 text-yellow-400 border border-yellow-500/30">
                  ğŸ”„ Running
                </span>
                <p class="text-yellow-400 text-xs mt-1">
                  <%= @latest_batch.current_index %>/<%= @latest_batch.total_count %> playlists
                </p>
              <% elsif @latest_batch.status == 'failed' %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-900/50 text-red-400 border border-red-500/30">
                  âŒ Failed
                </span>
                <p class="text-red-400 text-xs mt-1">
                  <%= @latest_batch.failure_reason || 'Unknown error' %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="border-t border-green-500/20 pt-3">
          <p class="text-gray-400 text-sm">No automated updates have run yet</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Content Stats -->
  <div class="mb-6">
    <h2 class="text-xl font-bold text-white mb-4">Content Stats</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-gradient-to-br from-yellow-500/20 to-yellow-600/20 rounded-xl p-6 border border-yellow-500/30">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-yellow-400 text-sm font-medium">Total Playlists</p>
            <p class="text-3xl font-bold text-white"><%= @playlists_count %></p>
          </div>
          <div class="w-12 h-12 bg-yellow-500/20 rounded-full flex items-center justify-center">
            <span class="text-2xl">ğŸµ</span>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-blue-500/20 to-blue-600/20 rounded-xl p-6 border border-blue-500/30">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-blue-400 text-sm font-medium">Categories</p>
            <p class="text-3xl font-bold text-white"><%= @categories_count %></p>
            <p class="text-xs text-gray-300 mt-1"><%= @root_categories %> root, <%= @subcategories %> sub</p>
          </div>
          <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center">
            <span class="text-2xl">ğŸ“</span>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-green-500/20 to-green-600/20 rounded-xl p-6 border border-green-500/30">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-green-400 text-sm font-medium">Featured</p>
            <p class="text-3xl font-bold text-white"><%= @featured_count %></p>
          </div>
          <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center">
            <span class="text-2xl">â­</span>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-red-500/20 to-red-600/20 rounded-xl p-6 border border-red-500/30">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-red-400 text-sm font-medium">Uncategorized</p>
            <p class="text-3xl font-bold text-white"><%= @uncategorized_count %></p>
          </div>
          <div class="w-12 h-12 bg-red-500/20 rounded-full flex items-center justify-center">
            <span class="text-2xl">â“</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Analytics Overview -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-bold text-white">Traffic & Engagement</h2>
      <%= link_to admin_analytics_path, class: "text-cyan-400 hover:text-cyan-300 text-sm font-semibold" do %>
        View Full Analytics â†’
      <% end %>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 mb-4">
      <div class="bg-gradient-to-br from-cyan-900/40 to-cyan-800/40 rounded-lg p-4 border border-cyan-700/50">
        <p class="text-cyan-400 text-xs font-medium mb-1">Total Visits</p>
        <p class="text-2xl font-bold text-white"><%= @total_visits %></p>
      </div>
      
      <div class="bg-gradient-to-br from-green-900/40 to-green-800/40 rounded-lg p-4 border border-green-700/50">
        <p class="text-green-400 text-xs font-medium mb-1">Human Visits</p>
        <p class="text-2xl font-bold text-white"><%= @human_visits %></p>
      </div>
      
      <div class="bg-gradient-to-br from-purple-900/40 to-purple-800/40 rounded-lg p-4 border border-purple-700/50">
        <p class="text-purple-400 text-xs font-medium mb-1">Visits Today</p>
        <p class="text-2xl font-bold text-white"><%= @visits_today %></p>
      </div>
      
      <div class="bg-gradient-to-br from-pink-900/40 to-pink-800/40 rounded-lg p-4 border border-pink-700/50">
        <p class="text-pink-400 text-xs font-medium mb-1">This Week</p>
        <p class="text-2xl font-bold text-white"><%= @visits_this_week %></p>
      </div>
      
      <div class="bg-gradient-to-br from-orange-900/40 to-orange-800/40 rounded-lg p-4 border border-orange-700/50">
        <p class="text-orange-400 text-xs font-medium mb-1">ğŸ”¥ Reactions</p>
        <p class="text-2xl font-bold text-white"><%= @total_reactions %></p>
      </div>
    </div>
    
    <!-- Engagement Metrics Row -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="bg-gradient-to-br from-teal-900/40 to-teal-800/40 rounded-lg p-4 border border-teal-700/50">
        <p class="text-teal-400 text-xs font-medium mb-1">ğŸ“¤ Total Shares</p>
        <p class="text-2xl font-bold text-white"><%= @total_shares %></p>
      </div>
      
      <div class="bg-gradient-to-br from-indigo-900/40 to-indigo-800/40 rounded-lg p-4 border border-indigo-700/50">
        <p class="text-indigo-400 text-xs font-medium mb-1">Shares Today</p>
        <p class="text-2xl font-bold text-white"><%= @shares_today %></p>
      </div>
      
      <div class="bg-gradient-to-br from-emerald-900/40 to-emerald-800/40 rounded-lg p-4 border border-emerald-700/50">
        <p class="text-emerald-400 text-xs font-medium mb-1">ğŸµ Spotify Opens</p>
        <p class="text-2xl font-bold text-white"><%= @total_spotify_opens %></p>
      </div>
      
      <div class="bg-gradient-to-br from-lime-900/40 to-lime-800/40 rounded-lg p-4 border border-lime-700/50">
        <p class="text-lime-400 text-xs font-medium mb-1">Opens Today</p>
        <p class="text-2xl font-bold text-white"><%= @spotify_opens_today %></p>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-gray-900/80 rounded-xl p-8 border border-gray-700 mb-8">
    <h2 class="text-2xl font-bold text-white mb-6">Quick Actions</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <%= link_to admin_playlists_path, class: "group bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl p-6 text-center hover:scale-105 transition-transform duration-200" do %>
        <div class="text-4xl mb-3">ğŸµ</div>
        <h3 class="text-lg font-semibold text-black mb-2">Playlists</h3>
        <p class="text-black/80 text-sm">Manage & update from Spotify</p>
      <% end %>

      <%= link_to admin_categories_path, class: "group bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl p-6 text-center hover:scale-105 transition-transform duration-200" do %>
        <div class="text-4xl mb-3">ğŸ“</div>
        <h3 class="text-lg font-semibold text-white mb-2">Categories</h3>
        <p class="text-blue-100 text-sm">Organize your category tree</p>
      <% end %>

      <%= link_to admin_analytics_path, class: "group bg-gradient-to-br from-cyan-500 to-cyan-600 rounded-xl p-6 text-center hover:scale-105 transition-transform duration-200" do %>
        <div class="text-4xl mb-3">ğŸ“Š</div>
        <h3 class="text-lg font-semibold text-white mb-2">Analytics</h3>
        <p class="text-cyan-100 text-sm">Traffic, searches & engagement</p>
      <% end %>

      <%= link_to admin_share_events_path, class: "group bg-gradient-to-br from-teal-500 to-teal-600 rounded-xl p-6 text-center hover:scale-105 transition-transform duration-200" do %>
        <div class="text-4xl mb-3">ğŸ“¤</div>
        <h3 class="text-lg font-semibold text-white mb-2">Share Analytics</h3>
        <p class="text-teal-100 text-sm">Track playlist shares</p>
      <% end %>

      <%= link_to admin_spotify_opens_path, class: "group bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl p-6 text-center hover:scale-105 transition-transform duration-200" do %>
        <div class="text-4xl mb-3">ğŸµ</div>
        <h3 class="text-lg font-semibold text-white mb-2">Spotify Opens</h3>
        <p class="text-emerald-100 text-sm">Track when users listen</p>
      <% end %>

      <%= link_to new_admin_playlist_path, class: "group bg-gradient-to-br from-green-500 to-green-600 rounded-xl p-6 text-center hover:scale-105 transition-transform duration-200" do %>
        <div class="text-4xl mb-3">â•</div>
        <h3 class="text-lg font-semibold text-white mb-2">New Playlist</h3>
        <p class="text-green-100 text-sm">Create a new playlist</p>
      <% end %>

      <%= link_to new_admin_category_path, class: "group bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl p-6 text-center hover:scale-105 transition-transform duration-200" do %>
        <div class="text-4xl mb-3">ğŸ·ï¸</div>
        <h3 class="text-lg font-semibold text-white mb-2">New Category</h3>
        <p class="text-purple-100 text-sm">Add a new category</p>
      <% end %>
      
      <%= link_to admin_update_logs_path, class: "group bg-gradient-to-br from-pink-500 to-pink-600 rounded-xl p-6 text-center hover:scale-105 transition-transform duration-200" do %>
        <div class="text-4xl mb-3">ğŸ“</div>
        <h3 class="text-lg font-semibold text-white mb-2">Update History</h3>
        <p class="text-pink-100 text-sm">View all changes</p>
      <% end %>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="bg-gray-900/80 rounded-xl p-6 border border-gray-700">
      <h3 class="text-xl font-bold text-white mb-4">Recent Playlists</h3>
      <% if @recent_playlists.any? %>
        <div class="space-y-3">
          <% @recent_playlists.each do |playlist| %>
            <div class="flex items-center justify-between p-3 bg-gray-800/50 rounded-lg">
              <div class="flex-1">
                <h4 class="text-white font-medium text-sm"><%= playlist.title %></h4>
                <p class="text-gray-400 text-xs"><%= playlist.track_count %> tracks</p>
              </div>
              <div class="flex gap-1">
                <% playlist.categories.each do |category| %>
                  <span class="px-2 py-1 bg-yellow-500/20 text-yellow-400 rounded text-xs"><%= category.name %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-400 italic">No playlists yet</p>
      <% end %>
    </div>

    <div class="bg-gray-900/80 rounded-xl p-6 border border-gray-700">
      <h3 class="text-xl font-bold text-white mb-4">Category Tree</h3>
      <% if Category.any? %>
        <div class="space-y-2">
          <% Category.where(parent_id: nil).order(:name).each do |root| %>
            <div class="p-2 bg-gray-800/50 rounded">
              <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded" style="background: <%= root.color %>"></span>
                <span class="text-white font-medium"><%= root.name %></span>
                <span class="text-gray-400 text-sm">(<%= root.children.count %>)</span>
              </div>
              <% if root.children.any? %>
                <div class="ml-5 mt-1 space-y-1">
                  <% root.children.order(:name).each do |child| %>
                    <div class="flex items-center gap-2">
                      <span class="text-gray-400">â†³</span>
                      <span class="w-2 h-2 rounded" style="background: <%= child.color %>"></span>
                      <span class="text-gray-300 text-sm"><%= child.name %></span>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-400 italic">No categories yet</p>
      <% end %>
    </div>
  </div>
</div>