<%= form_with model: [:admin, @category], class: "space-y-4" do |f| %>
  <div>
    <%= f.label :name, class: 'block text-gray-300 mb-1' %>
    <%= f.text_field :name, class: 'w-full p-2 bg-gray-800 text-white rounded' %>
  </div>
  <div>
    <%= f.label :slug, class: 'block text-gray-300 mb-1' %>
    <%= f.text_field :slug, class: 'w-full p-2 bg-gray-800 text-white rounded' %>
  </div>
  <div>
    <%= f.label :description, class: 'block text-gray-300 mb-1' %>
    <%= f.text_area :description, rows: 4, class: 'w-full p-2 bg-gray-800 text-white rounded' %>
  </div>
  <div>
    <%= f.label :color, class: 'block text-gray-300 mb-1' %>
    <%= f.text_field :color, placeholder: '#D4AF37', class: 'w-full p-2 bg-gray-800 text-white rounded' %>
  </div>
  <div>
    <%= f.label :position, class: 'block text-gray-300 mb-1' %>
    <%= f.number_field :position, class: 'w-full p-2 bg-gray-800 text-white rounded' %>
  </div>
  <div>
    <%= f.submit class: 'px-4 py-2 bg-yellow-500 text-black rounded-lg' %>
  </div>
<% end %>


