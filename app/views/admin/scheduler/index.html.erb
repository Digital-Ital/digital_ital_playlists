<div class="container mx-auto px-6 py-10 bg-black/50 rounded-xl backdrop-blur-sm">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-white mb-2">‚è∞ Scheduler Controls</h1>
    <p class="text-gray-300">Manage your Heroku Scheduler settings and update frequency</p>
  </div>

  <!-- Current Status -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <div class="bg-gradient-to-br from-blue-500/20 to-blue-600/20 rounded-xl p-6 border border-blue-500/30">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-blue-400 text-sm font-medium">Scheduler Status</p>
          <p class="text-2xl font-bold text-white">
            <% if @paused %>
              ‚è∏Ô∏è Paused
            <% else %>
              ‚ñ∂Ô∏è Running
            <% end %>
          </p>
        </div>
        <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center">
          <span class="text-2xl">
            <% if @paused %>
              ‚è∏Ô∏è
            <% else %>
              ‚ñ∂Ô∏è
            <% end %>
          </span>
        </div>
      </div>
    </div>

    <div class="bg-gradient-to-br from-green-500/20 to-green-600/20 rounded-xl p-6 border border-green-500/30">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-green-400 text-sm font-medium">Update Mode</p>
          <p class="text-2xl font-bold text-white">
            <% if @quick_updates %>
              ‚ö° Quick (15min)
            <% else %>
              üêå Normal (1hr)
            <% end %>
          </p>
        </div>
        <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center">
          <span class="text-2xl">
            <% if @quick_updates %>
              ‚ö°
            <% else %>
              üêå
            <% end %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Control Buttons -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Pause/Unpause Controls -->
    <div class="bg-gray-900/50 rounded-xl border border-gray-700 p-6">
      <h3 class="text-xl font-bold text-white mb-4">‚è∏Ô∏è Pause/Unpause</h3>
      <p class="text-gray-400 mb-4">
        Pause the scheduler when you're not adding tracks to avoid unnecessary API calls.
      </p>
      <% if @paused %>
        <%= form_with url: admin_scheduler_unpause_path, method: :post, local: true do |form| %>
          <%= form.submit "‚ñ∂Ô∏è Unpause Scheduler", 
              class: "w-full inline-flex items-center justify-center px-4 py-2 bg-green-700 text-white rounded-lg hover:bg-green-600 transition-colors" %>
        <% end %>
      <% else %>
        <%= form_with url: admin_scheduler_pause_path, method: :post, local: true do |form| %>
          <%= form.submit "‚è∏Ô∏è Pause Scheduler", 
              class: "w-full inline-flex items-center justify-center px-4 py-2 bg-yellow-700 text-white rounded-lg hover:bg-yellow-600 transition-colors" %>
        <% end %>
      <% end %>
    </div>

    <!-- Quick Updates Controls -->
    <div class="bg-gray-900/50 rounded-xl border border-gray-700 p-6">
      <h3 class="text-xl font-bold text-white mb-4">‚ö° Quick Updates</h3>
      <p class="text-gray-400 mb-4">
        Enable quick updates to sync every 15 minutes instead of hourly.
      </p>
      <%= form_with url: admin_scheduler_toggle_quick_updates_path, method: :post, local: true do |form| %>
        <% if @quick_updates %>
          <%= form.submit "üêå Disable Quick Updates", 
              class: "w-full inline-flex items-center justify-center px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors" %>
        <% else %>
          <%= form.submit "‚ö° Enable Quick Updates", 
              class: "w-full inline-flex items-center justify-center px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-600 transition-colors" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Information Panel -->
  <div class="bg-gray-900/50 rounded-xl border border-gray-700 p-6 mb-8">
    <h3 class="text-xl font-bold text-white mb-4">‚ÑπÔ∏è How It Works</h3>
    <div class="space-y-3 text-gray-300">
      <div class="flex items-start gap-3">
        <span class="text-blue-400">üìÖ</span>
        <div>
          <p class="font-medium">Default Schedule</p>
          <p class="text-sm text-gray-400">Runs every hour at :40 minutes (e.g., 1:40, 2:40, 3:40...)</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <span class="text-green-400">‚ö°</span>
        <div>
          <p class="font-medium">Quick Updates</p>
          <p class="text-sm text-gray-400">When enabled, runs every 15 minutes (e.g., 1:00, 1:15, 1:30, 1:45...)</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <span class="text-yellow-400">‚è∏Ô∏è</span>
        <div>
          <p class="font-medium">Paused Mode</p>
          <p class="text-sm text-gray-400">When paused, no automatic updates will run until you unpause</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Back Navigation -->
  <div class="flex gap-4">
    <%= link_to "‚Üê Back to Dashboard", admin_root_path, 
        class: "inline-flex items-center px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors" %>
    <%= link_to "View Batch Updates", admin_batch_updates_path, 
        class: "inline-flex items-center px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-600 transition-colors" %>
  </div>
</div>
